type ItemDTO {
    title: String
    price: Int
    category: String
}

type Image {
    fileName: String
    fileOriginName: String
    size: Int
    type: String
    fileUrl: String
}

type Query {
    getItemByTitle(title: String): ItemDTO
}

type Mutation {
    createItem(request: ItemCreateRequest): ItemDTO
}

input ItemCreateRequest {
    title: String
    content: String
    summary: String
    price: Int
    sellCnt: Int
    wishCnt: Int
    clickCnt: Int
    avgReview: Float
    reviewCnt: Int
    qnaCnt: Int
    status: Boolean
    userId: String
    categoryTitle: String
    detailCategoryTitle: String
    imageId: [String]
}
