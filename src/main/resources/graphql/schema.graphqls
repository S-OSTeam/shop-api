type ItemDTO {
    title: String
    content: String
    summary: String
    sellCnt: Int
    wishCnt: Int
    clickCnt: Int
    avgReview: Float
    reviewCnt: Int
    qnaCnt: Int
    status: Boolean
    images: [String]
#    account: Account
    account: String
}

type ItemCategoryResponseDTO{
    title: String,
    itemDetailCategories: [ItemDetailCategory]
}

type ItemDetailCategoryResponseDTO{
    title: String
    itemIdList: [String]
}

type ItemDetailCategory{
    title: String,
    itemIdList: [String]
}

