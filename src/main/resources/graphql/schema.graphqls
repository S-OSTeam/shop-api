type Image {
    fileName: String
    fileOriginName: String
    size: Int
    type: String
    fileUrl: String
}

type Query {
    findCategoryByTitle(title: String): ItemCategoryResponseDTO
    getItemCategoriesContainsTitle(title: String): [ItemCategoryResponseDTO]
    getItemDetailCategoryByTitle(title: String): ItemDetailCategoryResponseDTO

    getItemsContainsTitle(title: String): [ItemDTO]
    getItemsByOption(categoryTitle: String, detailTitle: String, itemTitle: String): [ItemDTO]
}

type Mutation {
    createCategory(request: CategoryCreateRequestDTO): ItemCategoryResponseDTO
    createDetailCategory(request: DetailCategoryCreateRequestDTO): ItemCategoryResponseDTO
    createItem(request: ItemCreateRequest): ItemDTO

    deleteCategory(id: String): Boolean
}

input CategoryCreateRequestDTO {
    title: String
}

input DetailCategoryCreateRequestDTO {
    title: String
    categoryTitle: String
}

input ItemCreateRequest {
    title: String
    content: String
    summary: String
    price: Int
    sellCnt: Int
    wishCnt: Int
    clickCnt: Int
    avgReview: Float
    reviewCnt: Int
    qnaCnt: Int
    status: Boolean
    userId: String
    categoryTitle: String
    detailCategoryTitle: String
    imageId: [String]
}
