input ItemRequest {
    categoryPublicId: Long! @Min(value : 1)
    title: String! @NotBlank
    content: String! @NotBlank
    summary: String! @NotBlank
    price: Int!
    status: Boolean!
    sellerId: String! @NotBlank
    freeDelivery: Boolean!
    images: [Upload!]!
}

type ItemResponse {
    publicId: Long!
    categoryPublicId: Long!
    title: String!
    content: String!
    summary: String!
    price: Int!
    sellCnt: Int!
    wishCnt: Int!
    clickCnt: Int!
    avgReview: Float!
    reviewCnt: Int!
    qnaCnt: Int!
    status: Boolean!
    sellerId: String!
    freeDelivery: Boolean!
    imageUrls: [String!]!
}

input ItemPageRequest {
    # 페이지 번호
    page: Int! @Min(value : 0)
    # 페이지 크기
    size: Int! @Min(value : 1)
    # 정렬 기준
    orderBy: OrderBy!
}

enum OrderBy {
    SELL_CNT, CLICK_CNT
}

input WishListRequest{
    # 사용자 ID
    userId: String!
    # 아이템 ID
    itemId: String!
}

input WishListPageRequest{
    # 사용자 ID
    userId: String!
    # 페이지 번호
    page: Int
    # 페이지 크기
    pageSize: Int!
}
